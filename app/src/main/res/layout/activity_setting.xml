<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yzy.diary.SettingActivity"
    android:fitsSystemWindows="true">

    <include layout="@layout/mytoolbar"/>

    <EditText
        android:id="@+id/oldpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignEnd="@+id/newpassword"
        android:layout_alignLeft="@+id/newpassword"
        android:layout_alignRight="@+id/newpassword"
        android:layout_alignStart="@+id/newpassword"
        android:ems="10"
        android:inputType="numberPassword" />

    <EditText
        android:id="@+id/newpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/renewpassword"
        android:layout_alignLeft="@+id/renewpassword"
        android:layout_alignRight="@+id/renewpassword"
        android:layout_alignStart="@+id/renewpassword"
        android:ems="10"
        android:inputType="numberPassword" />

    <EditText
        android:id="@+id/renewpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/changepass"
        android:layout_alignRight="@+id/changepass"
        android:layout_toRightOf="@+id/textView4"
        android:ems="10"
        android:inputType="numberPassword" />

    <Button
        android:id="@+id/changepass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/renewpassword"
        android:text="修改" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lock"
        android:layout_marginTop="30dp"
        android:text="原密码"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="31dp"
        android:text="新密码"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="31dp"
        android:text="确认新密码"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="23dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="日记锁"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Switch
        android:id="@+id/lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:textSize="20sp"
        android:layout_below="@id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="注意:第一次使用日记锁时，默认密码123，要更换，请修改！"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/toolbar"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
